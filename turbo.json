{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "cache": true
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "build:storybook": {
      "cache": true,
      "dependsOn": ["^build"]
    }
  }
}
